{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES5",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "outDir": "./types",
        "declaration": true,
        "emitDeclarationOnly": true, /* 仅生成declaration */
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "useDefineForClassFields": true,
        // "noEmit": true,
        "noImplicitReturns": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "lib"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
